# Kubectl set Variables
export USE_GKE_GCLOUD_AUTH_PLUGIN=True


# Kubectl helper Commands
# Help
# k is kubectl command
# l is list
# c is context
# g is get.
# d is describe
# t is terminate
# e is edit
# n is nodes
# p is pod
# sv is service
# i is ingress
# s is secret
# hpa is horizontal pod auto scaler


# Kube Config
alias k=kubectl
alias klc="kubectl config get-contexts"
alias kuc="kubectl config use-context $1"
alias kcuc="kubectl config unset"
alias ktop="kubectl top pod"

# Deployment
alias kgd="k get deployment"
alias ked="k edit deployment"
alias kdd="k describe deployment"
alias ktd="k delete deployment"

# Pod
alias ktp="k delete pod"
alias kgp="k get pod -o wide"
alias kep="k edit pod"
alias kdp="k describe pod"
alias watchpod="watch kubectl get pod"

# Service
alias ktsv="k delete svc"
alias kgsv="k get svc -o wide"
alias kesv="k edit svc"
alias kdsv="k describe svc"

# Ingress
alias kti="k delete ing"
alias kgi="k get ing -o wide"
alias kei="k edit ing"
alias kdi="k describe ing"

# Secret
alias kgs="k get secret -o wide"
alias kds="k describe secret"
alias kes="k edit secret"
alias kts="k delete secret"

# Configmap
alias kgcm="k get configmap -o wide"
alias kdcm="k describe configmap"
alias kecm="k edit configmap"
alias ktcm="k delete configmap"

# Daemonset
alias kgds="k get daemonset -o wide"
alias kdds="k describe daemonset"
alias keds="k edit daemonset"
alias ktds="k delete daemonset"

# Cronjob
alias kgcj="k get cronjob -o wide"
alias kdcj="k describe cronjob"
alias kecj="k edit cronjob"
alias ktcj="k delete cronjob"

# Job
alias kgj="k get job -o wide"
alias kdj="k describe job"
alias kej="k edit job"
alias ktj="k delete job"
alias watchjob="watch kubectl get job"

# Job
alias kgss="k get statefulset -o wide"
alias kdss="k describe statefulset"
alias kess="k edit statefulset"
alias ktss="k delete statefulset"
alias watchss="watch kubectl get statefulset"

# Horizontal Pod AutoScaler
alias kghpa="k get hpa -o wide"
alias kdhpa"k describe hpa"
alias kehpa="k edit hpa"
alias kthpa="k delete hpa"

# Nodes
alias kgn="k get nodes -o wide"
alias kdn="k describe nodes"
alias watchnodes="watch kubectl get nodes"

# Logs
alias klogs="k logs -f"

# Cluster Roles & Roles
alias kgroles="k get roles"
alias kgrolebindings="k get rolebindings"
alias kgcroles="k get clusterroles"
alias kgcrolebindings="k get clusterrolebindings"


# Get Nodes Resource Usage
alias nusage='kubectl get nodes --no-headers | awk '\''{print $1}'\'' | xargs -I {} sh -c '\''echo {} ; kubectl describe node {} | grep Allocated -A 5 | grep -ve Event -ve Allocated -ve percent -ve -- ; echo '\'''
